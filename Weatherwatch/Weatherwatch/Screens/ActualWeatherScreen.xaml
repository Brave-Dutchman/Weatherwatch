<core:Screen x:Class="Weatherwatch.Screens.ActualWeatherScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:core="clr-namespace:Weatherwatch.Core;assembly=Weatherwatch.Core"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Button x:Name="SaveAll" Content="All" Grid.Column="2" HorizontalAlignment="Left" Width="75" RenderTransformOrigin="0.787,9.2" Margin="4,40,0,40" Grid.Row="1"/>
        <Button x:Name="SaveRadars" Content="Radars" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="4,60,0,0" Grid.Row="1"/>
        <Button x:Name="SaveWarnings" Content="Warnings" Grid.Column="2" HorizontalAlignment="Left" Margin="4,80,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>

        <Image x:Name="RadarDisplay" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" />
        <Label x:Name="SaveLabel" Content="Save:" Grid.Column="2" HorizontalAlignment="Left" Margin="23,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button x:Name="ReloadAll" Content="All" Grid.Column="2" HorizontalAlignment="Left" Width="75" RenderTransformOrigin="0.787,9.2" Margin="88,40,0,40" Grid.Row="1"/>
        <Button x:Name="ReloadRadars" Content="Radars" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="88,60,0,0" Grid.Row="1"/>
        <Button x:Name="ReloadWarnings" Content="Warnings" Grid.Column="2" HorizontalAlignment="Left" Margin="88,80,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="ReloadLabel" Content="Reload:" Grid.Column="2" HorizontalAlignment="Left" Margin="107,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>

        <ComboBox x:Name="CbxWarningLocation" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Bottom" Grid.Row="0" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="ComboBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,0,5,0" Grid.Row="1" VerticalAlignment="Center"/>
        <Label x:Name="LblSelectRadar" Content="Select radar:" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,10,5,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</core:Screen>

